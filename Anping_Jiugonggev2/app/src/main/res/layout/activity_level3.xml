<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/homepage_background"
    tools:context="com.example.yo.anping_jiugonggev2.Level3Activity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@mipmap/level_3"/>
    <TextView
        android:id="@+id/level_tv3"
        android:layout_gravity="left"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\? ? ? ? ?"
        android:textColor="@color/white"
        android:textSize="40sp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_gravity="right"
        android:layout_marginTop="300dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/photocamera"
        app:backgroundTint="@color/silvers"
        app:layout_anchorGravity="bottom|end" />
    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="@string/level_3_story"/>
    <Button
        android:id="@+id/solvebt3"
        android:layout_gravity="center"
        android:layout_marginTop="235dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF44AA"
        android:textSize="14sp"
        android:text="@string/solve"/>
</FrameLayout>
